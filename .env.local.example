# ==============================================
# SIGIM - Variables de Entorno
# ==============================================
# Copia este archivo como .env.local y completa los valores.
#   cp .env.local.example .env.local

# Firebase (Firestore + Auth)
# Obtener de: Firebase Console → Project Settings → SDK setup
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Coordenadas centro del mapa (Cañete por defecto)
NEXT_PUBLIC_DEFAULT_LAT=-13.0769
NEXT_PUBLIC_DEFAULT_LNG=-76.3858

# Cloudinary (subida de imágenes)
# Obtener de: https://console.cloudinary.com/settings/account
# Crear Upload Preset unsigned en: Settings → Upload → Upload presets
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=sigim_unsigned
